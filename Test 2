<?php
$conn = mysqli_connect("localhost","root","","cms");

$id = $_GET['id'] ?? '';
$edit = false;
$error = '';
$previewImg = '';

if($id){
    $edit = true;
    $res = mysqli_query($conn,"SELECT * FROM gallery WHERE id=$id");
    $row = mysqli_fetch_assoc($res);
    $oldSmall = $row['gallery_small_img'];
    $oldBig   = $row['gallery_big_img'];
    $previewImg = $oldSmall;
}

if(isset($_POST['save'])){

    $uploadPath = "uploads/";
    $hasImage = !empty($_FILES['image']['name']);

    if($hasImage){

        $tmp = $_FILES['image']['tmp_name'];
        $type = mime_content_type($tmp);
        $allowed = ['image/jpeg','image/png'];

        list($width,$height) = getimagesize($tmp);

        // âŒ VALIDATIONS
        if(!in_array($type,$allowed)){
            $error = "Only JPG and PNG allowed";
        }
        elseif($width < 600){
            $error = "Image width must be minimum 600px";
        }
        else{

            // DELETE OLD IMAGE
            if($edit){
                @unlink($uploadPath.$oldSmall);
                @unlink($uploadPath.$oldBig);
            }

            $imgId = $edit ? $id : time();

            $bigName   = "gallery_big_img".$imgId.".jpg";
            $smallName = "gallery_small_img".$imgId.".jpg";

            // CREATE IMAGE RESOURCE
            $src = ($type == 'image/png')
                ? imagecreatefrompng($tmp)
                : imagecreatefromjpeg($tmp);

            // BIG IMAGE
            imagejpeg($src,$uploadPath.$bigName,90);

            // SMALL IMAGE (400px proportional)
            $newW = 400;
            $newH = ($height/$width)*$newW;

            $thumb = imagecreatetruecolor($newW,$newH);
            imagecopyresampled(
                $thumb,$src,
                0,0,0,0,
                $newW,$newH,
                $width,$height
            );

            imagejpeg($thumb,$uploadPath.$smallName,90);

            // DB OPERATION
            if($edit){
                mysqli_query($conn,"
                    UPDATE gallery SET
                    gallery_small_img='$smallName',
                    gallery_big_img='$bigName'
                    WHERE id=$id
                ");
            } else {
                mysqli_query($conn,"
                    INSERT INTO gallery(gallery_small_img,gallery_big_img)
                    VALUES('$smallName','$bigName')
                ");
            }

            // UPDATE PREVIEW IMAGE
            $previewImg = $smallName;
        }
    }

    if(!$edit && !$hasImage){
        $error = "Image is required";
    }
}
?>

<!DOCTYPE html>
<html>
<head>
<title>Gallery Form</title>
<style>
.error{color:red;margin-bottom:10px;}
img{border:1px solid #ccc;padding:5px;}
</style>
</head>
<body>

<h2><?= $edit ? 'Update' : 'Add' ?> Gallery Image</h2>

<?php if($error){ ?>
<div class="error"><?= $error ?></div>
<?php } ?>

<form method="post" enctype="multipart/form-data">

    <input type="file" name="image" accept="image/jpeg,image/png">
    <br><br>

    <?php if($previewImg){ ?>
        <img src="uploads/<?= $previewImg ?>" width="200">
        <br><br>
    <?php } ?>

    <button name="save"><?= $edit ? 'Update' : 'Upload' ?></button>
</form>

</body>
</html>
